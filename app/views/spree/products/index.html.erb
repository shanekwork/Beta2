

<% if "spree/products" == params[:controller] && @taxon || !@taxonomies.empty? %>
  <% content_for :sidebar do %>
    <div data-hook="homepage_sidebar_navigation">
      <% if "spree/products" == params[:controller] && @taxon %>
        <%= render :partial => 'spree/shared/filters' %>
      <% else %>
        <%= render :partial => 'spree/shared/taxonomies' %>
      <% end %>
    </div>
  <% end %>
<% end %>



<% @products.each do |product| %>
  <div style="border: 2px solid #999; border-bottom: 30px; border-radius: 30px;" class="row">
    <div class="col-md-3">
      <%= image_tag('http://ts.liveofficedata.co.uk/' + product.image_url) %>
    </div>
    <div class="col-md-5">
      <h3><%= link_to product.name, product %></h3>
      <p>â‚¬<%= product.price %></p>
    </div>
    <div class="col-md-4">
      <h3>Machine Fits</h3>
      <p><%= product.machine_models %></p>
    </div>
  </div>

<% end %>
